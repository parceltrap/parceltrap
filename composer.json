{
    "name": "parceltrap/parceltrap",
    "type": "library",
    "description": "A driver-based parcel tracking library for PHP",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/config": "^9.7",
        "illuminate/container": "^9.7",
        "illuminate/support": "^8.0 || ^9.0",
        "nunomaduro/larastan": "^2.2",
        "spatie/data-transfer-object": "^3.7",
        "spatie/laravel-package-tools": "^1.13"
    },
    "require-dev": {
        "orchestra/testbench": "^7.9",
        "pestphp/pest": "^1.21.1",
        "phpstan/phpstan": "^1.4.6",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "ParcelTrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParcelTrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "ParcelTrap\\ParcelTrapServiceProvider"
            ],
            "aliases": {
                "ParcelTrap": "ParcelTrap\\Facades\\ParcelTrap"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
